<% layout("/layouts/boilerplate") %>

<div class="row row-cols-lg-2 row-cols-md-3 row-cols-1 mt-3">
  <% for(let puja of allPujas) { %>
        <div class="card mb-3 card-margin" style="max-width: 33rem;">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="<%= puja.image.url %>" class="img-fluid rounded-start card-img-top" alt="<%= puja.image.name %>" style="height: 13rem;">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= puja.title %></h5>
                <p class="card-text"><%= puja.description %></p>
      
                <p class="card-text"><small class="text-body-secondary"><a href="/puja/<%= puja._id %>" class="btn btn-transference">Book Puja</a></small></p>
              </div>
            </div>
          </div>
        </div>
  <% } %>
</div>
